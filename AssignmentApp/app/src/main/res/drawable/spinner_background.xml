<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal state -->
    <item android:state_enabled="true"
        android:state_pressed="false"
        android:drawable="@drawable/spinner_background_normal"/>

    <!-- Pressed state -->
    <item android:state_enabled="true"
        android:state_pressed="true"
        android:drawable="@drawable/spinner_background_pressed"/>

    <!-- Disabled state -->
    <item android:state_enabled="false"
        android:drawable="@drawable/spinner_background_disabled"/>

</selector>
